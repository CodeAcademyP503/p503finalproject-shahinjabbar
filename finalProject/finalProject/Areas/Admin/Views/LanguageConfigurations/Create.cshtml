@model finalProject.Models.LanguageConfiguration

@{
    ViewData["Title"] = "Create";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>LanguageConfiguration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LangName" class="control-label"></label>
                <input asp-for="LangName" class="form-control" />
                <span asp-validation-for="LangName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoPath" class="control-label"></label>
                <input asp-for="PhotoPath" accept=".jpg,.png" type="file" class="form-control" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

